<%= form_with(model: color) do |form| %>
  <% if color.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(color.errors.count, "error") %> prohibited this color from being saved:</h2>

      <ul>
        <% color.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :hex_code, style: "display: block" %>
    <div class="flex align-middle gap-2">
      <%= form.color_field :hex_code, id: "color_picker", oninput: "updateColorHexValue()", value: "#ffffff" %>
      <span id="hex_value">#ffffff</span>
    </div>
  </div>

  <div class="controls mt-2">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>

<script>
  function updateColorHexValue() {
    const colorPicker = document.getElementById('color_picker');
    const hexValueDisplay = document.getElementById('hex_value');
    hexValueDisplay.innerHTML = colorPicker.value;
  }
</script>
