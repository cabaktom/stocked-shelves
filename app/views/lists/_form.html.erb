<%= form_with(model: list) do |form| %>
  <% if list.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(list.errors.count, "error") %> prohibited this list from being saved:</h2>

      <ul>
        <% list.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :color, style: "display: block" %>
    <%= form.select :color_id, Color.all.map { |color| ["#{color.name} (#{color.hex_code})", color.id] }, { include_blank: true } %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
