<div class="card">
  <%= render @product %>
</div>

<div class="controls mt-4">
  <%= link_to "Edit this product", edit_product_path(@product), class: "btn btn-primary" %>
  <%= link_to "Back to products", products_path, class: "btn btn-secondary" %>
  <%= button_to "Destroy this product", @product, method: :delete, class: "btn btn-danger" %>
</div>
